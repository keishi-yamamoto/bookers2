<%= form_for(@book, url: books_path) do |f| %>
<% if @book.errors.any? %>
<div id="error_explanation">
  <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<br>
<div class="row">
  <div class="col-sm-6">
    <div class="field">
      <label>Title</label>
      <%= f.text_field :title %>
    </div>
  </div>
  <div class="col-sm-6">
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <div class="field">
      <label>Opinion</label>
      <%= f.text_field :body %>
    </div>
  </div>
</div>
<hr>
<%= f.submit "送信", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>