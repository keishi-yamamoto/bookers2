<body>
  <header class="navbar navbar-fixed-top-inverse">
  </header>
  <div class="body">
    <div class="container">
      <div class="row">
        <div class="col-xs-3"></div>
        <div class="col-xs-9">
          <h2>Book detail</h2>
          <table class="table">
            <tbody>
              <tr>
                <td><%= @book.user.name %></td>
                <td><%= @book.title %></td>
                <td><%= @book.body %></td>
                <% if @book.user == current_user %>
                <td><%= link_to 'Edit', edit_book_path(@book.id) %>
                <td><%= link_to 'Destroy', book_path(@book.id), method: :delete, data: {confirm: '本当に消しますか？'} %>
                  <% end %>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</body>