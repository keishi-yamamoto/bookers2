<!-- users/:id -->
<body>
	<header class="navbar navbar-fixed-top-inverse">
	</header>
	<div class="body">
		<div class="container">
      	<% if flash[:notice] %>
     	 <p><%= flash[:notice] %></p>
     	 <% end %>
			<div class="row">
				<div class="col-xs-3">
					<%= render 'layouts/side_menu' %></div>
					<div class="col-xs-9">
						<h2>Books</h2>
						<table class="table table-hover table-inverse">
							<thead>
								<tr>
									<th></th>
									<th>Title</th>
									<th>Opinion</th>
									<th colspan="3"></th>
								</tr>
							</thead>
							<tbody>
								<% @books.each do |book| %>
								<tr>
									<td><%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image2.jpg"%></td>
									<td><%= link_to book_path(book.id) do %>
										<%= book.title %>
										<% end %>
									</td>
									<td><%= book.body %></td>
								</tr>
								<% end %>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</body>