<body>
	<header class="navbar navbar-fixed-top-inverse">
	</header>
	<div class="body">
		<div class="container">
			<h1>User info</h1>
			<%= form_for(@user) do |f| %>
			<div class="field">
				<%= f.label :name %><br>
				<%= f.text_field :name %>
			</div>

			<div class="form-group has-icon">
				<div class="user-edit-image">
					<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%>
				</div>
				<label class="control-label sr-only" for="inputEmail">ProfileImage</label>
				<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
			</div>

			<div class="field">
				<%= f.label :introduction %><br>
				<%= f.text_field :introduction %>
			</div>

			<div class="actions">
				<%= f.submit "Update User" %>
			</div>
			<% end %>

		</div>
	</div>
</body>
