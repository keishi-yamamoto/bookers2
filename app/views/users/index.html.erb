<!-- Users in _navbar -->
<body>
  <header class="navbar navbar-fixed-top-inverse">
  </header>
  <div class="body">
    <div class="container">
      <div class="row">
        <div class="col-xs-3">
          <%= render 'layouts/side_menu' %></div>
          <div class="col-xs-9">
            <h2>Users</h2>
            <table class="table">
              <thead>
                <tr>
                  <th>image</th>
                  <th>name</th>
                  <th></th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                <% @users.each do |user| %>
                <tr>
                  <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image2.jpg"%></td>
                  <td><%= user.name %></td>
                  <td><%= link_to "Show", user_path(user.id) %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </body>