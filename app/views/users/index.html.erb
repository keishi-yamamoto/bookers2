<body>
  <header class="navbar navbar-fixed-top-inverse">
  </header>
  <div class="body">
    <div class="container">
      <div class="row">
        <div class="col-xs-3">
          <h2>User info</h2>
          <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%>
          <table class="table">
            <tbody>
              <tr>
                <th>name</th>
                <th><%= @user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
              </tr>
            </tbody>
          </table>
          <div class="row">
            <% if @user.id == current_user.id %>
            <p class="col-xs-12 btn btn-default glyphicon glyphicon-wrench">
              <%= link_to "", edit_user_path(@user) %></p>
              <% else %>
              <p class="col-xs-12 btn btn-default glyphicon glyphicon-wrench">
                <%= link_to "", user_path(@user) %></p>
                <% end %>
              </div>
            </div>
            <div class="col-xs-9">
              <h2>Users</h2>
              <table class="table">
                <thead>
                  <tr>
                    <th>image</th>
                    <th>name</th>
                    <th></th>
                    <th colspan="3"></th>
                  </tr>
                </thead>
                <tbody>
                  <% @users.each do |user| %>
                  <tr>
                    <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image2.jpg"%></td>
                    <td><%= user.name %></td>
                    <td><%= link_to user_path(user.id) do %>
                      show
                      <% end %>
                    </td>
                  </tr>
                  <% end %>
                </tbody>
              </table>

            </div>
          </div>
        </div>
      </div>
    </body>